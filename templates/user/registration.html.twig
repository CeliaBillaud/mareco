{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <form method="post" class="w-1/2 mx-auto py-5 flex flex-col content-center gap-4">

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

         <div class="flex min-h-full flex-col justify-center sm:px-6 py-12 lg:px-8">
            <div class="sm:mx-auto sm:w-full sm:max-w-sm">
                <img class="mx-auto h-20 w-auto" src="{{asset('build/images/hero.png')}}" alt="MaReco">
                <h1 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Inscription</h2>
            </div>

            <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

            {{ form_start(formUser, {'attr' : {'novalidate' : 'novalidate'}}) }}

                <div class="block text-sm/6 font-medium text-gray-900">
                    {{ form_row(formUser.email) }}
                </div>

                <div class="block text-sm/6 font-medium text-gray-900 mt-6">
                    {{ form_row(formUser.username) }}
                </div>

                <div class="block text-sm/6 font-medium text-gray-900 mt-6">
                    {{ form_row(formUser.password.first) }}
                </div>

                 <div class="block text-sm/6 font-medium text-gray-900 mt-6">
                    {{ form_row(formUser.password.second) }}
                </div>

                <div class="mt-6">
                        <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                        S'inscrire</button>
                </div>
        
            {{ form_end(formUser) }}
            </div>
        </div>

    </form>
{% endblock %}
