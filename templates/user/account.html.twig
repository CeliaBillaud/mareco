{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}

<div class="h-full bg-base-100 rounded-lg w-full p-4">
    {% if app.user %}
        <div class="flex flex-col justify-center gap-4">
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">Mon Compte</h1>
            <h2 class="font-light text-gray-500">Gérer mon compte </h2>
            <p class="text-gray-700">Vous êtes connecté en tant que {{ app.user.username }}</p>
            <a href="{{ path('app_user_logout') }}" class="btn btn-primary text-white">Déconnexion</a>
        </div>
    {% else %}
        <div class="flex flex-col items-center justify-center gap-4">
            <h1 class="text-2xl font-bold tracking-tight text-gray-900">Mon Compte</h1>
            <p class="text-gray-700">Vous n'êtes pas connecté</p>
            <a href="{{ path('app_user_login') }}" class="btn btn-primary text-white">Connexion</a>
        </div>
    {% endif %}
</div>

{% endblock %}